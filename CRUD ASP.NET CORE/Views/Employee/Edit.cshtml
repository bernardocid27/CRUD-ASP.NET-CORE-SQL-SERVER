@model CRUD_ASP.NET_CORE.Models.EmployeeInfo
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>
<h4>Employee Edit</h4>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID"/>
            <div class="form-group">
                <label asp-for="Name" class="form-control"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="test-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Gender" class="form-control"></label>
                <select asp-for="Gender" class="form-control">
                    <option value="">--Select Gender--</option>
                    <option value="Male">--Male--</option>
                    <option value="Female">--Female--</option>
                </select>
                <span asp-validation-for="Gender" class="test-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Company" class="form-control"></label>
                <input asp-for="Company" class="form-control" />
                <span asp-validation-for="Company" class="test-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Department" class="form-control"></label>
                <input asp-for="Department" class="form-control" />
                <span asp-validation-for="Department" class="test-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

